---
import Logo from './Logo.astro'
import { getI18N } from '../i18n/'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale: currentLocale })
---

<section class="text-xl text-left px-[70px] max-w-[60ch] text-pretty mx-auto my-24">
	<Logo class="w-20 mb-10 m-auto" />
	<h1 class="text-5xl font-semibold text-center text-wrap mx-auto mb-10 tracking-wide">
		{i18n.INTRO_TITLE}
	</h1>
	<p set:html={i18n.INTRO_DESCRIPTION_1} />
	<p set:html={i18n.INTRO_DESCRIPTION_2} />
	<p set:html={i18n.INTRO_DESCRIPTION_3} />
</section>
